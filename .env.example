# ============================================================
# APEX HUMANITY — Environment Variables Template
# Copy this file to .env and fill in your values
# NEVER commit .env to git!
# ============================================================

# ── Oracle Configuration ─────────────────────────────────────
# Private key (hex, no 0x prefix) for SATIN Oracle ECDSA signing
# Generate: python -c "from cryptography.hazmat.primitives.asymmetric import ec; k=ec.generate_private_key(ec.SECP256K1()); print(k.private_numbers().private_value.to_bytes(32,'big').hex())"
ORACLE_PRIVATE_KEY_HEX=your_oracle_private_key_hex_here

# API keys for oracle access (comma-separated)
SATIN_API_KEYS=dev-key-apex-humanity,prod-key-replace-me

# ── Blockchain ────────────────────────────────────────────────
DEPLOYER_PRIVATE_KEY=your_deployer_wallet_private_key_here

# RPC URLs
POLYGON_MUMBAI_RPC=https://rpc-mumbai.maticvigil.com
POLYGON_RPC=https://polygon-rpc.com
ARBITRUM_RPC=https://arb1.arbitrum.io/rpc

# Block explorer API keys (for contract verification)
POLYGONSCAN_API_KEY=your_polygonscan_api_key
ARBISCAN_API_KEY=your_arbiscan_api_key

# ── Deployed Contract Addresses (fill after deployment) ───────
VAULT_ADDRESS=0x0000000000000000000000000000000000000000
GOOD_TOKEN_ADDRESS=0x0000000000000000000000000000000000000000
LEDGER_ADDRESS=0x0000000000000000000000000000000000000000
USDC_ADDRESS=0x2791Bca1f2de4661ED88A30C99A7a9449Aa84174  # Polygon USDC
ORACLE_ADDRESS=0x0000000000000000000000000000000000000000

# ── Frontend ──────────────────────────────────────────────────
NEXT_PUBLIC_ORACLE_URL=http://localhost:8000
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=your_walletconnect_project_id
NEXT_PUBLIC_SATIN_API_KEY=dev-key-apex-humanity

# ── Storage ──────────────────────────────────────────────────
IPFS_GATEWAY=https://ipfs.io/ipfs/
WEB3_STORAGE_TOKEN=your_web3storage_token_here

# ── Database ─────────────────────────────────────────────────
DATABASE_URL=postgresql://apex:apex_secret@localhost:5432/apex_humanity
REDIS_URL=redis://localhost:6379/0

# ── Misc ──────────────────────────────────────────────────────
REPORT_GAS=false
CMC_API_KEY=your_coinmarketcap_api_key
